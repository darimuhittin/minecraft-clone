{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Minecraft Clone",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/minecraft_clone.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "PATH",
          "value": "${env:PATH};C:/Qt/Tools/mingw810_64/bin;${env:VCPKG_ROOT}/installed/x64-mingw-dynamic/bin;${workspaceFolder}/build"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/Qt/Tools/mingw810_64/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "CMake Build"
    }
  ]
}
